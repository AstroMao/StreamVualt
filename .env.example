# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=video_db
DB_USER=video_user
DB_PASSWORD=db_password

# Session Configuration
SESSION_SECRET=your_secure_session_secret
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# Authentication
# Default users are created in the database during initialization
# You can use the hash-admin-password.js script to hash passwords before deployment
# node scripts/hash-admin-password.js

# Transcoding Configuration
# DEFAULT_QUALITY=all  # Options: all, 1080p, 720p, 480p, 360p
# USE_GPU=false        # Whether to use GPU acceleration if available
# AUTO_TRANSCODE=true  # Whether to automatically transcode videos after upload

# File Storage Paths (optional, defaults are in server.js)
# MEDIA_PATH=./media
# UPLOAD_PATH=./upload
